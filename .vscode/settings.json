{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "cSpell.words": [
    "DOMAINNAME",
    "Hokori",
    "TINYINT",
    "UPYUN",
    "USERACCOUNT",
    "accepters",
    "browserslist",
    "commitlint",
    "miment",
    "objs",
    "precss",
    "prodesign",
    "tids",
    "ttsc",
    "ttypescript",
    "zerollup"
  ],
  "[less]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // JS/TS 统一使用 eslint 进行 format
  "[javascript]": {
    "editor.defaultFormatter": null
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": null
  },
  "[typescript]": {
    "editor.defaultFormatter": null
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": null
  },
  "files.eol": "\n"
}
